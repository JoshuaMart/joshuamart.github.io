---
import { getCollection } from 'astro:content';
import { Icon } from 'astro-icon/components';
import MainLayout from '../../layouts/MainLayout.astro';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}

function getReadingTime(content: string) {
  const wordsPerMinute = 200;
  const words = content.split(/\s+/).length;
  return Math.ceil(words / wordsPerMinute);
}
---

<MainLayout title="Blog - Joshua Martinelle" description="Technical articles about security research, bug bounty, and malware analysis.">
  <section class="mx-auto max-w-6xl px-4 py-12 sm:px-6 sm:py-16">
    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm text-text-muted">
      <a href="/" class="hover:text-accent">Home</a>
      <span class="mx-2">/</span>
      <span class="text-text-main">Blog</span>
    </nav>

    <!-- Header -->
    <header class="mb-10">
      <h1 class="text-3xl font-bold text-text-main sm:text-4xl">Research Log</h1>
      <p class="mt-4 max-w-2xl text-text-muted">
        Technical deep-dives into security research, bug bounty write-ups, and malware analysis.
      </p>
    </header>

    <!-- Posts Grid -->
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {sortedPosts.map((post) => (
        <article class="group overflow-hidden rounded-lg border border-border bg-surface transition-all hover:border-border-hover">
          {post.data.image ? (
            <img src={post.data.image} alt={post.data.title} class="aspect-video w-full object-cover" />
          ) : (
            <div class="aspect-video bg-surface-elevated"></div>
          )}
          <div class="p-5">
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="mb-3 flex flex-wrap gap-2">
                {post.data.tags.slice(0, 2).map((tag) => (
                  <span class="rounded bg-accent/10 px-2 py-0.5 text-xs font-medium text-accent">
                    {tag}
                  </span>
                ))}
              </div>
            )}
            
            <div class="mb-2 flex items-center gap-3 text-xs text-text-muted">
              <span class="flex items-center gap-1">
                <Icon name="lucide:calendar" class="h-3 w-3" />
                {formatDate(post.data.date)}
              </span>
              <span class="flex items-center gap-1">
                <Icon name="lucide:clock" class="h-3 w-3" />
                {getReadingTime(post.body || '')} min read
              </span>
            </div>
            
            <h2 class="font-semibold text-text-main transition-colors group-hover:text-accent">
              {post.data.title}
            </h2>
            
            <p class="mt-2 text-sm text-text-muted line-clamp-2">
              {post.data.description}
            </p>
            
            <a
              href={`/blog/${post.id}`}
              class="mt-4 inline-flex items-center gap-1 text-sm text-accent"
            >
              Read Article
              <Icon name="lucide:arrow-right" class="h-4 w-4" />
            </a>
          </div>
        </article>
      ))}
    </div>

    {sortedPosts.length === 0 && (
      <div class="rounded-lg border border-border bg-surface p-10 text-center">
        <p class="text-text-muted">No articles published yet.</p>
      </div>
    )}
  </section>
</MainLayout>
